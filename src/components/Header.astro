---
// Header Component
---

<header class="sticky top-0 z-50 w-full bg-background-light/90 backdrop-blur-md border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <a href="/" class="flex items-center">
        <!-- Logo Desktop -->
        <img 
          src="/img/logoheader.png" 
          alt="MYR Transportes SpA" 
          class="hidden md:block"
          width="200"
          height="80"
        />
        <!-- Logo Mobile -->
        <img 
          src="/img/logo.png" 
          alt="MYR Transportes SpA" 
          class="block md:hidden h-20"
          width="80"
          height="80"
        />
      </a>
      <nav class="hidden md:flex space-x-8">
        <a class="text-sm font-semibold hover:text-primary transition-colors" href="/#servicios">Servicios</a>
        <a class="text-sm font-semibold hover:text-primary transition-colors" href="/#cobertura">Cobertura</a>
        <a class="text-sm font-semibold hover:text-primary transition-colors" href="/#flota">Flota</a>
        <a class="text-sm font-semibold hover:text-primary transition-colors" href="/#contacto">Contacto</a>
      </nav>
      <div class="flex items-center gap-4">
        <a href="/cotizar" class="bg-accent-coral hover:bg-red-600 text-white px-6 py-2.5 rounded-lg font-bold text-sm transition-all shadow-lg shadow-accent-coral/20">
          Solicitar Cotización
        </a>
        <!-- Mobile menu button -->
        <button class="md:hidden p-2" id="mobile-menu-btn" aria-label="Menú">
          <span class="material-symbols-outlined" aria-hidden="true">menu</span>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile menu -->
  <div class="hidden md:hidden bg-white border-t border-gray-200" id="mobile-menu">
    <div class="px-4 py-4 space-y-3">
      <a class="block text-sm font-semibold hover:text-primary transition-colors" href="/#servicios">Servicios</a>
      <a class="block text-sm font-semibold hover:text-primary transition-colors" href="/#cobertura">Cobertura</a>
      <a class="block text-sm font-semibold hover:text-primary transition-colors" href="/#flota">Flota</a>
      <a class="block text-sm font-semibold hover:text-primary transition-colors" href="/#contacto">Contacto</a>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
